{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": ["es2018", "esnext.asynciterable"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "src/types/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }